<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tdatum"
            android:layout_width="331dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/dkPcelinjak"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableTint="#7E3535"
            app:fontFamily="@font/actor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nazivPcelinjakaEditText" />

        <TextView
            android:id="@+id/tdodajNaziv"
            android:layout_width="346dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/nPcelinjak"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableTint="#7E3535"
            app:fontFamily="@font/actor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/tdodajP"
            android:layout_width="260dp"
            android:layout_height="36dp"
            android:layout_marginStart="91dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="64dp"
            android:text="@string/dPcelinjak"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:drawableTint="#7E3535"
            app:fontFamily="@font/actor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/datumKreiranjaEditText" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="388dp"
            android:layout_height="187dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="123dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pozadina_dodavanje" />

        <EditText
            android:id="@+id/nazivPcelinjakaEditText"
            android:layout_width="349dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/image_border"
            android:color="@color/white"
            android:hint="@string/unPcelinjak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tdodajNaziv" />

        <EditText
            android:id="@+id/datumKreiranjaEditText"
            android:layout_width="355dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/image_border"
            android:color="@color/white"
            android:hint="@string/udoPcelinjak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tdatum" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
