<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.TipPcelinjakaFragment">

    <TextView
        android:id="@+id/tstacionar"
        android:layout_width="299dp"
        android:layout_height="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="6dp"
        android:text="@string/dkPcelinjak"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:drawableTint="#7E3535"
        app:fontFamily="@font/actor"
        app:layout_constraintBottom_toTopOf="@+id/pokretnip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stacionarp" />

    <TextView
        android:id="@+id/tpokretni"
        android:layout_width="307dp"
        android:layout_height="34dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="3dp"
        android:text="@string/dkPcelinjak"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:drawableTint="#7E3535"
        app:fontFamily="@font/actor"
        app:layout_constraintBottom_toTopOf="@+id/stacionarp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttipPcelinjaka" />

    <ImageView
        android:id="@+id/stacionarp"
        android:layout_width="300dp"
        android:layout_height="232dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/kosnica"
        app:layout_constraintBottom_toTopOf="@+id/tstacionar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpokretni"
        app:srcCompat="@drawable/kosnica" />

    <ImageView
        android:id="@+id/pokretnip"
        android:layout_width="301dp"
        android:layout_height="256dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="63dp"
        android:src="@drawable/pokretan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tstacionar" />

    <TextView
        android:id="@+id/ttipPcelinjaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="3dp"
        android:text="@string/ovrstaPcelinjaka"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableTint="#7E3535"
        app:fontFamily="@font/actor"
        app:layout_constraintBottom_toTopOf="@+id/tpokretni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>